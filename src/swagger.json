{
    "openapi": "3.0.0",
    "info": {
        "title": "Users API Documentation",
        "description": "This is an API for users registration",
        "version": "1.0.0",
        "contact": {
            "email": "mauhmg@gmail.com"
        }
    },
    "paths": {
        "/users": {
            "post": {
                "tags": [
                    "User"
                ],
                "summary": "Cria um novo usuário",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "name": {
                                        "type": "string"
                                    },
                                    "email": {
                                        "type": "string"
                                    }
                                },
                                "example": {
                                    "name": "Name example",
                                    "email": "email@example.com"
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Created"
                    },
                    "400": {
                        "description": "Email Already exists!"
                    }
                }
            },
            "get": {
                "tags": [
                    "User"
                ],
                "summary": "Retorna todos os usuários",
                "description": "Retorna todos os usuários",
                "responses": {
                    "200": {
                        "description": "Sucess",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "type": "object",
                                        "properties": {
                                            "admin": {
                                                "type": "boolean"
                                            },
                                            "id": {
                                                "type": "string"
                                            },
                                            "name": {
                                                "type": "string"
                                            },
                                            "email": {
                                                "type": "string"
                                            },
                                            "created_at": {
                                                "type": "string"
                                            },
                                            "updated_at": {
                                                "type": "string"
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/users/{user_id}": {
            "get": {
                "tags": [
                    "User"
                ],
                "summary": "Retorna um usuário",
                "description": "Retorna o usuário passado na rota",
                "responses": {
                    "200": {
                        "description": "Sucess",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": ""
                                }
                            }
                        }
                    }
                }
            }
        },
        "/users/{user_id}/admin": {
            "patch": {
                "tags": [
                    "User"
                ],
                "summary": "Torna um usuário admin",
                "description": "O usuário passado na rota se tornará admin",
                "responses": {}
            }
        }
    }
}