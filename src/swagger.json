{
    "openapi": "3.0.0",
    "info": {
        "title": "Users API Documentation",
        "description": "This is an API for users registration",
        "version": "1.0.0",
        "contact": {
            "email": "mauhmg@gmail.com"
        }
    },
    "paths": {
        "/users": {
            "post": {
                "tags": [
                    "User"
                ],
                "summary": "Cria um novo usuário",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "name": {
                                        "type": "string"
                                    },
                                    "email": {
                                        "type": "string"
                                    }
                                },
                                "example": {
                                    "name": "Name example",
                                    "email": "email@example.com"
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Operação realizada com sucesso.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "example": {
                                        "admin": false,
                                        "id": "153d1f3a-ff85-4e28-b3aa-e557fff994e2",
                                        "name": "Name example",
                                        "email": "email@example.com",
                                        "created_at": "2023-01-18T14:35:19.817Z",
                                        "updated_at": "2023-01-18T14:35:45.457Z"
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Email já cadastrado!",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "example": {
                                        "error": "Email already exists!"
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "get": {
                "tags": [
                    "User"
                ],
                "parameters": [
                    {
                        "in": "header",
                        "name": "user_id",
                        "required": true,
                        "schema": {
                            "type": "string($uuid)"
                        }
                    }
                ],
                "summary": "Retorna todos os usuários",
                "description": "Retorna todos os usuários (Somente usuários `admin` podem acessar)",
                "responses": {
                    "200": {
                        "description": "Operação realizada com sucesso.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "type": "object",
                                        "properties": {
                                            "admin": {
                                                "type": "boolean"
                                            },
                                            "id": {
                                                "type": "string"
                                            },
                                            "name": {
                                                "type": "string"
                                            },
                                            "email": {
                                                "type": "string"
                                            },
                                            "created_at": {
                                                "type": "string"
                                            },
                                            "updated_at": {
                                                "type": "string"
                                            }
                                        }
                                    },
                                    "example": [
                                        {
                                            "admin": true,
                                            "id": "153d1f3a-ff85-4e28-b3aa-e557fff994e2",
                                            "name": "Name example",
                                            "email": "email@example.com",
                                            "created_at": "2023-01-18T14:35:19.817Z",
                                            "updated_at": "2023-01-18T14:35:45.457Z"
                                        },
                                        {
                                            "admin": false,
                                            "id": "e4d1eecf-ab52-46fe-b2dc-45b977aa8c1e",
                                            "name": "test",
                                            "email": "test@test.com",
                                            "created_at": "2023-01-18T17:55:10.651Z",
                                            "updated_at": "2023-01-18T17:55:51.969Z"
                                        }
                                    ]
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "`Usuário não é um admin!` ou `Usuário não existe!`",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "example": [
                                        {
                                            "error": "User is not admin."
                                        },
                                        {
                                            "error": "User does not exists!"
                                        }
                                    ]
                                }
                            }
                        }
                    }
                }
            }
        },
        "/users/{user_id}": {
            "get": {
                "tags": [
                    "User"
                ],
                "parameters": [
                    {
                        "in": "path",
                        "name": "user_id",
                        "required": true,
                        "description": "ID do usuário",
                        "schema": {
                            "type": "string($uuid)"
                        }
                    }
                ],
                "summary": "Retorna um usuário",
                "description": "Retorna o usuário passado na rota",
                "responses": {
                    "200": {
                        "description": "Operação realizada com sucesso.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "example": {
                                        "admin": false,
                                        "id": "153d1f3a-ff85-4e28-b3aa-e557fff994e2",
                                        "name": "Name example",
                                        "email": "email@example.com",
                                        "created_at": "2023-01-18T14:35:19.817Z",
                                        "updated_at": "2023-01-18T14:35:45.457Z"
                                    }
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Usuário não existe.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "example": {
                                        "error": "User does not exists!"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/users/{user_id}/admin": {
            "patch": {
                "tags": [
                    "User"
                ],
                "parameters": [
                    {
                        "in": "path",
                        "name": "user_id",
                        "required": true,
                        "schema": {
                            "type": "string($uuid)"
                        }
                    }
                ],
                "summary": "Torna um usuário admin",
                "description": "O usuário passado na rota se tornará admin",
                "responses": {
                    "200": {
                        "description": "Operação realizada com sucesso.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "example": {
                                        "admin": true,
                                        "id": "153d1f3a-ff85-4e28-b3aa-e557fff994e2",
                                        "name": "Name example",
                                        "email": "email@example.com",
                                        "created_at": "2023-01-18T14:35:19.817Z",
                                        "updated_at": "2023-01-18T14:35:45.457Z"
                                    }
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Usuário não existe.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "example": {
                                        "error": "User does not exists!"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}